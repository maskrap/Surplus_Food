<h3>All postings</h3>
<% if @postings.any? %>
  <ul>
    <% @postings.each { |posting| %>
      <li><a href="/postings/<%= posting.id %>"><strong><%= posting.description %></strong></a>
        <br>
        Categories: <% posting.categories.each { |category| %>
          <a href="/search/category"><%= category.name %></a>
          <% } %>
        <br>
        Source Type: <%= posting.source_type %>
        <br>
        Quantity: <%= posting.quantity %>
        <br>
        Location: <a href="/search/locations"><%= posting.location %></a>
        <br>
        Created at: <%= posting.created_at %></li>
        <hr>
    <% } %>
  </ul>
<% end %>

<a href="/">Home</a>
